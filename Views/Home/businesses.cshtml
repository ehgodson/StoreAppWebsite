        new { Description = "Hospitals", Category = "Health", Icon = "05.png" },
        new { Description = "Hotels", Category = "Retail", Icon = "06.png" },
        new { Description = "Fashion / Boutique", Category = "Retail", Icon = "07.png" },
        new { Description = "Furniture", Category = "Retail", Icon = "08.png" },
        new { Description = "Electronic Stores", Category = "Retail", Icon = "09.png" },
        new { Description = "Computer Stores", Category = "Retail", Icon = "10.png" },
